{
	"name": "help380",
	"version": "1.0.0",
	"scripts": {
		"start:be": "ts-node-dev --respawn --no-notify --transpile-only ./backend/index.ts",
		"start:be:production": "NODE_ENV=production node build/backend/index.js",
		"start:fe": "cd frontend && next dev --port 3001",
		"validate:tsc": "npm run validate:tsc:fe && npm run validate:tsc:be && npm run validate:tsc:shared",
		"validate:tsc:be": "cd backend && tsc --noEmit",
		"validate:tsc:fe": "cd frontend && tsc --noEmit",
		"validate:tsc:shared": "cd shared && tsc --noEmit",
		"validate:eslint": "npm run validate:eslint:be && npm run validate:eslint:fe && npm run validate:eslint:shared",
		"validate:eslint:be": "cd backend && eslint --ignore-path=../.gitignore --ext=.ts .",
		"validate:eslint:fe": "cd frontend && eslint --ignore-path=../.gitignore --ext=.ts,.tsx .",
		"validate:eslint:shared": "cd shared && eslint --ignore-path=../.gitignore --ext=.ts .",
		"validate:prettier": "prettier --ignore-path .gitignore --check backend frontend shared migrations",
		"validate": "npm run validate:tsc && npm run validate:eslint && npm run validate:prettier",
		"build": "npm run build:be && npm run build:fe",
		"build:be": "rm -rfv build/backend && cd backend && tsc",
		"build:fe": "rm -rfv build/frontend frontend/.next && cd frontend && NEXT_PUBLIC_PRODUCTION_BUILD=1 next build && next export -o ../build/frontend"
	},
	"dependencies": {
		"@mantine/core": "3.6.11",
		"@mantine/hooks": "3.6.11",
		"cors": "2.8.5",
		"db-migrate": "1.0.0-beta.14",
		"db-migrate-pg": "1.2.2",
		"express": "4.17.3",
		"next": "12.1.0",
		"pg": "8.7.3",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"sql-template-tag": "5.0.1",
		"zod": "3.12.0"
	},
	"devDependencies": {
		"@types/cors": "2.8.12",
		"@types/express": "4.17.13",
		"@types/pg": "8.6.4",
		"@types/react": "17.0.39",
		"@typescript-eslint/eslint-plugin": "4.32.0",
		"@typescript-eslint/parser": "4.32.0",
		"eslint": "7.32.0",
		"eslint-config-next": "12.1.0",
		"eslint-config-prettier": "8.4.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.0.0",
		"eslint-plugin-react": "7.29.2",
		"eslint-plugin-react-hooks": "4.3.0",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"prettier": "2.5.1",
		"ts-node-dev": "1.1.8",
		"typescript": "4.4.3"
	},
	"engines": {
		"node": ">= 16.0.0",
		"npm": ">= 6.0.0"
	}
}
